<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_donor_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sdc.aisat.annajijo.blooddonation.main_things.DonorPage">
    <Spinner
        android:layout_marginTop="-2dp"
        android:padding="10dp"
        style="@style/DefaultButtonText"
        android:id="@+id/bloodgroupspinner"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="@+id/bloodgroupspinner"
        android:id="@+id/donorList"
        android:layout_below="@+id/bloodgroupspinner" />

</RelativeLayout>
